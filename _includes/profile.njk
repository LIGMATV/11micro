<!DOCTYPE html>
<html lang="{{ lang }}">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ index.title }}</title>
    <meta name="description" content="{{ index.bio }}">

    <link rel="stylesheet" href="/modules/mastodon-timeline.min.css">
    <script src="/modules/mastodon-timeline.umd.js"></script>
    <script src="/modules/bsky-embed.umd.js"></script>
    <link rel="stylesheet" href="/style.css">
    <link rel="shortcut icon" href="{{ index.favicon }}">
    <style>
        :root {
            --primary: {{ index.primary }};
            --secondary: {{ index.secondary }};
        }
        svg:not([fill=none]) {
            fill: currentColor;
            display: inline-block;
            width: 1.5rem;
            height: 1.5rem;
        }
    </style>
</head>

<body>
    <main>
        <section class="header">
            <img src="{{ index.favicon }}" alt="Favicon" class="favicon" width="128" height="128">
            <h1 class="title">{{ index.title }}</h1>
            <div id="pronouns" class="pronouns" title="Prononus: {{ index.pronouns }}">{{ index.pronouns }}</div>
            <div id="badges" class="badges">
                <ul>
                    {% for key, badge in index.badges %}
                    <li>
                        <a href="{{ badge.url }}" id="badge-{{ key }}">
                            <img src="{{ badge.img }}" alt="{{ badge.title }}" title="{{ badge.title }}" height="18">
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>            
            <div id="social" class="header-social">
                <ul>
                    {% for key, data in index.items.social %}
                    {% if key != "title" %}
                    <li>
                        <a rel="me" href="{{ data.url }}">
                            {% if not data.customIcon %}
                                <span class="si-icon" title="{{ key | capitalize }}">{% icon "si:" + key %}</span>
                            {% endif %}
                            {% if data.customIcon %}
                                <span class="custom-icon" title="{{ key | capitalize }}">{{ data.customIcon | markdownifyInline | safe }}</span>
                            {% endif %}
                        </a>
                    </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <div id="bio" class="bio">{{ index.bio }}</div>
        </section>

        <section class="notes" id="notes">
            {% for key, note in index.notes %}
            <details id="note-{{ key }}" open>
                <summary>
                    <a href="#note-{{ key }}" class="anchor">#</a>
                    <h2>{{ note.title }}</h2>
                </summary>
                <article>
                    {{ note.content | markdownify | safe }}
                </article>
            </details>
            {% endfor %}
        </section>

        <section class="items" id="items">
            {% for category, links in index.items %}
            <details id="items-{{ category }}" open>
                <summary>
                    <a href="#items-{{ category }}" class="anchor">#</a>
                    <h2>{{ links.title }}</h2>
                </summary>
                <ul>
                    {% for key, data in links %}
                    {% if key != "title" %}
                    <li>
                        <a rel="me" id="items-{{ category }}-{{ key }}" href="{{ data.url }}">
                            {% if not data.customIcon %}
                                <span class="si-icon" title="{{ key | capitalize }}">{% icon "si:" + key %}</span>
                            {% endif %}
                            {% if data.customIcon %}
                                <span class="custom-icon" title="{{ key | capitalize }}">{{ data.customIcon | markdownifyInline | safe }}</span>
                            {% endif %}
                            <span class="link">{{ data.title }}</span>
                        </a>                        
                    </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </details>
            {% endfor %}
        </section>

        <section class="featured" id="featured">
            {% for category, items in index.featured %}
            <details id="featured-{{ category }}" open>
                <summary>
                    <a href="#featured-{{ category }}" class="anchor">#</a>
                    <h2>{{ items.title }}</h2>
                </summary>
                <ul>
                    {% for key, project in items %}
                    {% if key != "title" %}
                    <li>
                        <a href="{{ project.url }}" id="featured-{{ category }}-{{ key }}">
                            <div class="featured-item">
                                <img src="{{ project.cover }}" alt="{{ project.title }}">
                                <div class="info">
                                    <h3>{{ project.title }}</h3>
                                    <p>{{ project.summary }}</p>
                                </div>
                            </div>
                        </a>
                    </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </details>
            {% endfor %}
        </section>

        {% if index.mastodon %}
        <section class="feed" id="mastodon-feed">
            <details open>
                <summary>
                    <a href="#mastodon-feed" class="anchor">#</a>
                    <h2> {% icon "si:mastodon" %} Mastodon Feed</h2>
                    <a class="btn" href="{{ index.mastodon.instance }}/@{{ index.mastodon.username }}">Open</a>
                </summary>
                <div id="mt-container" class="mt-container">
                    <div class="mt-body" role="feed">
                        <div class="mt-loading-spinner"></div>
                    </div>
                </div>  
            </details>            
        </section>
        {% endif %}

        {% if index.bluesky %}
        <section class="feed" id="bsky-feed">
            <details open>
                <summary>
                    <a href="#bsky-feed" class="anchor">#</a>
                    <h2> {% icon "si:bluesky" %} Bluesky Feed</h2>
                    <a class="btn" href="https://bsky.app/profile/{{ index.bluesky.username }}">Open</a>
                </summary>
                <bsky-embed
                    username="{{ index.bluesky.username }}"
                    limit="20"
                    load-more="true"
                    custom-styles="section { max-height: calc(100vh + 4rem); overflow-y: auto; overflow-x: hidden; }">
                </bsky-embed>
            </details>
        </section>   
        {% endif %}

    </main>

    <footer>
        <span>Powered by <a href="https://github.com/LIGMATV/11micro">11micro</a> (<a href="https://www.11ty.dev/docs/">11ty</a>).</span>
        {% if index.repo %}
        <span><a href="{{ index.repo }}/blob/main/_data/index.yaml">Data source</a></span>
        {% endif %}
    </footer>

    {% if index.mastodon %}
    <script>
        const myTimeline = new MastodonTimeline.Init({
            instanceUrl: "{{ index.mastodon.instance }}",
            timelineType: "profile",
            userId: "{{ index.mastodon.id }}",
            profileName: "@{{ index.mastodon.username }}"
        });
    </script>
    {% endif %}

</body>

</html>